<!DOCTYPE html>
<html>
<head>
  <title>AcrossEc</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>

</head>
<body>


	<p class= "flash-error"><%= flash[:alert] %></p>

	<p class= "flash-notice"><%= flash[:notice] %></p>


 <% if current_registrar %>	
<div id="username">
<p> <a href="/show/#{current_registrar.id}"> <%=h current_registrar.first_name%> </a><p> 
</div>
<%= link_to "Log out", '/registrarlogout' %>
<% end %>

<% if current_student %>	
<div id="username">
<p> <%= link_to "#{h current_student.first_name}", "/show/#{current_student.id}" %>  <p> 
</div>
<%= link_to "Log out", '/studentlogout' %>
<% end %>


<div id="logo" ><img src="http://s13.postimage.org/dsjxojht3/plogo.gif" alt="Across EC logo"  width="245" height="145">

<div id="topTitle">
<h1> <%= @title %> </h1> 
</div>

</div> 

<div id="box">


<div id="navigationM">
<ul>
<li><a href="/pages/home">Home </a></li> 
<li><a href="/pages/about">AboutAcrossEC</a></li> 
<li><a href="/schedules">ViewSchedule</a></li>
<% if current_student %>
<li><a href="/applications/new">Apply </a></li>
<% else %>
<li><a href="/loginasstudent">Apply</a></li>
<% end %>
<% if current_registrar %>
<li><a href="/applications">View Applications </a></li>
<% else %>
<li><a href="#status">ApplicationStatus</a></li>
<% end %>
<li><a href="#">HaveQuestions</a></li> 
</ul>
</div> 

<div id="content">
<%= yield %>
</div> 


<div id="navigationD">
<ul>
<li><a href="/pages/about">About us </a></li> 
<li><a href="/pages/contact">Contact us </a></li>
<li><a href="/pages/privacy">Privacy Policy</a></li>
</ul>
</div>

<div id="logo_footer" ><img src="http://s14.postimage.org/4t1uh9va9/CMSidra.jpg" alt="CMU and QF logo"  width="300" height="100">



</div>

</div>

</body>

<footer>

	

	</footer>
</html>


